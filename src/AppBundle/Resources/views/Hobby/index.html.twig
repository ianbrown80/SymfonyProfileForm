{% extends 'base.html.twig' %}
{% block body %}
{% for flash_message in app.session.flashBag.get('notice') %}
    <div class="flash-notice alert alert-success">
        {{ flash_message }}
    </div>
{% endfor %}
<div class="col-md-12">
  <h2 class="page-header">Users</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>User</th>
        <th>Image</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {%for user in users %}
      <tr>
        <th scope="row">{{ user.id }}</th>
        <td><img class="table_image" src="/img/{{ user.image }}"</td>
        <td>{{ user.name }}</td>
        <td>
          <a href="/profile/{{ user.id }}" class="btn btn-success">View</a>
          <a href="/update/{{ user.id }}" class="btn btn-primary">Edit</a>
          <a href="/delete/{{ user.id }}" class="btn btn-danger">Delete</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
