{% extends 'base.html.twig' %}
{% block body %}
  <div class="col-md-12">
    <h2 class="page-header">{{ user.name }}</h2>
    <div class="row">
      <div class="col-md-6">
        <img src="/img/{{ user.image }}" />
      </div>
      <div class="col-md-6">
        <h3 >Hobbies</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Hobby</th>
              <th>Date Started</th>
            </tr>
          </thead>
          <tbody>
            {% for hobby in user.hobby %}
            <tr>
              <td>{{ hobby.hobby }}</td>
              <td>{{ hobby.date|date('m-Y') }}</td>
            </tr>
            {% endfor %}            
          </tbody>
        </table>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12">
        <p class="biography">{{ user.biography | raw }}</p
      </div>
    </div>
  </div>

{% endblock %}
